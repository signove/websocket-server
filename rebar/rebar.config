{deps, [
    {'cowboy', ".*", {
        git, "https://github.com/extend/cowboy.git", {tag, "2.9.0"}}
    },
    {'lager', ".*", {
        git, "https://github.com/basho/lager.git", {tag, "3.2.4"}}
    },
    {'uuid', ".*", {
        git, "https://github.com/okeuday/uuid.git", {tag, "v2.0.0"}}
    },
    {'jsone', ".*", {
        git, "https://github.com/sile/jsone.git", {tag, "1.5.2"}}
    }
]}.
{overrides, [
    {override, jsone, [{erl_opts, [{d, 'ENABLE_HIPE'}, inline]}]}
]}.
{relx, [{release, {microservicehub, "2.1.0"},
         [microservicehub]},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]}.
{profiles, [{prod, [{relx, [{dev_mode, false}, {include_erts, true}]}]}]}.

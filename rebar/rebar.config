{deps, [
    {'cowboy', ".*", {
        git, "git://github.com/extend/cowboy.git", {tag, "1.1.2"}}
    },
    {'lager', ".*", {
        git, "git://github.com/basho/lager.git", {tag, "2.2.1"}}
    },
    {'uuid', ".*", {
        git, "git://github.com/okeuday/uuid.git", {tag, "v1.7.1"}}
    },
    {'jsone', ".*", {
        git, "git://github.com/sile/jsone.git", {tag, "1.2.3"}}
    }
]}.
{overrides, [
    {override, jsone, [{erl_opts, [{d, 'ENABLE_HIPE'}, inline]}]}
]}.
{relx, [{release, {multiscreen_ws, "2.0.0"},
         [multiscreen_ws]},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]}.
